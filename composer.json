{
    "name": "yazan/laravel-settings",
    "description": "Laravel Settings to create your setting in easy way",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Yazan Alnughnugh",
            "email": "yazan.alnughnugh@hotmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "laravel/legacy-factories": "^1.0.4",
        "mockery/mockery": "^1.3.3",
        "orchestra/testbench": "^6.0 || ^7.0"
    },

    "autoload": {

        "psr-4": {
            "Yazan\\Setting\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Yazan\\Setting\\Tests\\": "tests/"
        }
     },

    "extra": {
        "laravel": {
            "providers": [
                "Yazan\\Setting\\SettingServiceProvider"
            ]
        }
    },

    "scripts": {
        "test": "vendor/bin/phpunit"
    }

}
